{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "warn",
            "always"
        ],
      "jsx-quotes": [
        "warn",
        "prefer-single"
      ],
      "react/display-name": [
        "off"
      ]
    },
  "ignorePatterns": [
    "*.md",
    "/server/database/**/*.json"
  ]
}
